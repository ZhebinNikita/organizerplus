        <item name="colorAccent">@color/AccentColor</item>


        <item name="android:listDivider">@color/DividerColor</item>


        <item name="android:dialogTitle">@color/PrimaryColor</item>

    </style>



    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <!-- Buttons -->
    <style name="WhiteButton" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/BtnWhite</item>
        <item name="colorControlHighlight">@color/BtnWhitePressed</item>
    </style>
