<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="275dp"
    android:layout_height="match_parent"
    android:background="?attr/colorPrimary"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="275dp"
        android:layout_height="48dp"
        android:background="?attr/colorPrimary">

        <ImageView
            android:id="@+id/imageViewDef_spinner_item"
            android:layout_width="30dp"
            android:layout_height="28dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:contentDescription="@string/empty"
            app:srcCompat="@drawable/ic_icon_list" />

        <TextView
            android:id="@+id/nameOfListDropDown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="7dp"
            android:layout_marginStart="7dp"
            android:layout_toEndOf="@+id/imageViewDef_spinner_item"
            android:layout_toRightOf="@+id/imageViewDef_spinner_item"
            android:textColor="@color/JustWhite"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView_numOfTasks"
            android:layout_width="34dp"
            android:layout_height="24dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:gravity="end"
            android:textAlignment="textEnd"
            android:textColor="@color/JustWhite"
            android:textSize="16sp" />
    </RelativeLayout>
</LinearLayout>